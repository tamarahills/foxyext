{
  "manifest_version": 2,
  "name": "Hey Foxy Extension",
  "version": "1.2.12",

  "description": "Agent for Hey Foxy Commands.",

  "icons": {
    "48": "icons/Foxy-SF.svg"
  },

  "applications": {
      "gecko": {
        "id": "foxycli@example.com",
        "strict_min_version": "50.0"
      }
    },

    "sidebar_action": {
      "default_icon": "icons/Foxy-SF.svg",
      "default_title" : "Hey Foxy",
      "default_panel": "sidebar/panel.html"
    },

    "browser_action": {
      "default_icon": "icons/Foxy-SF.svg"
    },

    "permissions": ["nativeMessaging",  "bookmarks", "tabs", "activeTab", "<all_urls>", "notifications"],

    "web_accessible_resources": ["/sidebar/*"],

    "commands": {
      "_execute_sidebar_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+Y"
        }
      }
    }
}
